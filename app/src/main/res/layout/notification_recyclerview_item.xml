<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/recycler_item_main_background"
    android:elevation="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:orientation="vertical">

        <com.seamlabs.BlueRide.widgets.CairoSemiBoldTextView
            android:id="@+id/school_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Hennawy School"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.seamlabs.BlueRide.widgets.CairoTextView
            android:id="@+id/notification_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="this is a new message"
            android:textColor="@color/black"
            android:visibility="visible" />
    </LinearLayout>

    <com.seamlabs.BlueRide.widgets.CairoTextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:text="1 second ago"
        android:textColor="@color/black"
        android:visibility="visible" />


</LinearLayout>